@model IEnumerable<ProjectViewModel>
@{
    ViewData["Title"] = "ProjectsDashboard";
}
<h2>ProjectsDashboard</h2>
<br />
<div>
    @foreach (ProjectViewModel project in Model)
    {
        <a href=@String.Concat("/TimeReport/TimeReports?SelectedProjectId=",project.Id)>
            <div class="container col-lg-3 well" style="overflow:hidden">
                <h1>@project.Name</h1>
                <br />
                <label class="danger">Deadline</label>
                <p>@project.EndDate</p>
                <label>Remaining Time</label>
                <h3>@(project.EstimatedTime - project.HoursSpent)</h3>
            </div>
            <div class="col-lg-1"></div>
        </a>
    }

    <a asp-controller="Project" asp-action="CreateProject">
        <div align="center" class="container col-lg-3 well" style="min-height:256px">
            <br />
            <h1>Add project</h1>
            <div align="center"> <i class="fa fa-5x fa-plus" style="color:green"></i></div>
            <br />
        </div>
    </a>
</div>